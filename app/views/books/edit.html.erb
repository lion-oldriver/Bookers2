<div class="container">
  <% breadcrumb :book_edit, @book %>
  <div class="row">
    <div class="col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <div class="text-danger">
        <% if @book.errors.any? %>
          <h3><%= pluralize(@book.errors.count,"error") %> prohibited this obj from being saved:</h3>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      </div>
       <%= form_with model:@book,local:true do |f| %>
        <div class="form-group">
          <%= f.label :Title %>
          <%= f.text_field :title, class:"form-control mb-3" %>
        <div class="form-group">
          <%= f.label :Opinion %>
          <%= f.text_area :body, class:"form-control"  %>
        </div>
        <div class="form-group">
          <%= f.label :Category %>
          <%= f.text_field :category, class:"form-control" %>
        </div>
        <div class="mb-3" id="star-rate-<%= @book.id %>">
          <%= render'books/star', book:@book %>
        </div>
        <%= f.submit "Update Book", class: 'btn btn-success' %>
      <% end %>
      <div class="d-flex flex-row mt-3">
        <%= link_to "Show", book_path(@book) %>
        <p class="mx-1">|</p>
        <%= link_to "Back", books_path %>
      </div>
    </div>
  </div>
</div>