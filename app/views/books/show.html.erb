<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <%= render'users/list',user:@user,book:@books %>
    </div>

    <div class="col-lg-1"></div>

    <div class="col-lg-8">
      <h1>Book detail</h1>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg" , size:'50x50'%><br>
              <%= link_to user_path(@user) do %>
                <%= @user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book) do %>
                <%= @book.title %>
              <% end %>
            </td>
            <td><%= @book.body %></td>
            <% if @book.user == current_user %>
              <td><%= link_to "Edit",edit_book_path(@book), class: 'btn btn-success' %></td>
              <td><%= link_to "Destroy",book_path(@book),method: :delete, class: 'btn btn-danger'  %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>