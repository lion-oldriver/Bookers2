      <h2>User Info</h2>
      <div>
        <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
      </div>
      <table class="table">
        <tr>
          <th>name</th>
          <th><%= user.name %></th>
        </tr>
        <tr>
          <th>inroduction</th>
          <th><%= user.introduction %></th>
        </tr>
      </table>
      <%= link_to edit_user_path(user), class: "btn btn-outline-dark btn-lg btn-block" do %>
        <i class="fas fa-user-cog"></i>
      <% end %>

      <h2>New Book</h2>
      <%= form_with model:book,local:true do |f|  %>
        <h5>Title</h5>
        <%= f.text_field :title %>
        <h5>Opinion</h5>
        <%= f.text_area :body %>
        <%= f.submit  class: 'btn btn-success'%>
      <% end %>