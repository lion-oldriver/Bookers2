<div class="container">
  <div class="row">
    <div class="col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <div class="text-danger">
        <% if @user.errors.any? %>
          <h3><%= pluralize(@user.errors.count,"error") %> prohibited this obj from being saved:</h3>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      </div>
      <%= form_with model:@user,local:true do |f| %>
        <div class="form-group">
          <label for="inputName">Name</label>
          <%= f.text_field :name,id:"inputName",class:"form-control" %>
        </div>
        <div class="form-group">
          <label for="inputImage">Image</label><br />
          <%= f.attachment_field :profile_image,placeholder:"プロフィール画像" %>
        </div>
        <div class="form-group">
          <label for="inputIntroduction">Introduction</label>
          <%= f.text_area :introduction,class:"form-control" %>
        </div>
        <%= f.submit "Update User", class:"btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>

