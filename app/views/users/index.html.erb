<div class="container">
  <div class="row">
    <div class="col-lg-3">
       <%= render'users/list',user:@user,book:@book %>
    </div>

    <div class="col-lg-1"></div>

    <div class="col-lg-8">
       <h1>User</h1>
       <table class="table">
         <thead>
           <tr>
             <th scope="col">image</th>
             <th scope="col">name</th>
             <th scope="col"></th>
           </tr>
         </thead>
         <tbody>
           <% @users.each do |user| %>
           <tr>
             <th scope="row"><%= attachment_image_tag user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg", size:'50x50' %></th>
             <th class="col-8"><%= user.name %></th>
             <th><%= link_to "show",user_path(user.id) %></th>
           </tr>
           <% end %>
         </tbody>
       </table>
    </div>
  </div>
</div>